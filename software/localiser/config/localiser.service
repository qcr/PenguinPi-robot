[Unit]
Description=egb439localiser
After=network.target

[Service]
ExecStart=/bin/bash /opt/penguinpi/localiser.sh
User=www-data
Group=www-data
WorkingDirectory=/var/www/penguinpi
RuntimeDirectory=penguinpi
RuntimeDirectoryMode=0774
PIDFile=/var/www/penguinpi/localiser.pid
StandardOutput=inherit
StandardError=inherit
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target
